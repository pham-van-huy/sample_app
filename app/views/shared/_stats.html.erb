<% @user ||= current_user %>
<div class="stats">
  <a href="<%= following_user_path @user %>">
    <strong id="following" class="stat">
      <%= @user.following.size %>
    </strong>
    <%= t "share.stats.following" %>
  </a>
  <a href="<%= followers_user_path @user %>">
    <strong id="followers" class="stat">
      <%= @user.followers.size %>
    </strong>
    <%= t "share.stats.followers" %>
  </a>
</div>
