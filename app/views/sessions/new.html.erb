<% provide :title, t("login.new.title") %>
<h1>Log in</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for :session, url: login_path do |f| %>

      <%= f.label :email, t("login.new.email") %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.label :password, t("login.new.password") %>
      <%= link_to t("login.new.forgot_password"), password_resets_new_path %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span><%= t("login.new.remember") %></span>
      <% end %>

      <%= f.submit t("login.new.log_in"), class: "btn btn-primary" %>
    <% end %>

    <p><%= t("login.new.text_one") %><%= link_to t("login.new.sign_up_now"), signup_path %></p>
  </div>
</div>
